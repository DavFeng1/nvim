set backspace=indent,eol,start
set number
set nocompatible
set tgc

set tabstop=4
set shiftwidth=4
set scrolloff=20

" Left padding
set numberwidth=5

" Set sign column always show
set signcolumn=yes

" move to bottom
set cmdheight=0

" timeoutlen
set timeoutlen=500

" enable mouse support for n v i modes
set mouse=nvi

